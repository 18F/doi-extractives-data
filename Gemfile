
source "https://rubygems.org"

raise 'Need ruby > 2.1 to run' unless RUBY_VERSION.to_f > 2.1

gem 'jekyll'
gem 'jekyll-redirect-from'
gem 'jekyll-sitemap'
gem 'scss_lint', require: false
gem 'html-proofer'
gem 'rubocop'
gem 'rubydoctest'
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

group :development do
  gem 'pry'
  gem 'rb-readline'
  gem 'stdlib'
end
